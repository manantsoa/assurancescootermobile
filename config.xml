<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.adobe.assurance" version="1.1.0">
    <name>AssuranceScooter</name>
    <description>
        An application which provides scooter insurance
    </description>
    <author email="contact@assuranceendirect.com" href="http://www.assurance-cyclo-scooter.com/">
        Assurance en Direct Team
    </author>
	<icon src="www/img/logoAssuranceScooterMobile.png"/>
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="3000"/>
	<platform name="android">
              <icon density="ldpi" src="www/img/logoAssuranceScooterMobile-ldpi.png"/>
              <icon density="mdpi" src="www/img/logoAssuranceScooterMobile-mdpi.png"/>
              <icon density="hdpi" src="www/img/logoAssuranceScooterMobile-hdpi.png"/>
              <icon density="xhdpi" src="www/img/logoAssuranceScooterMobile-xhdpi.png"/>
    </platform>
	<platform name="android">
    <!-- you can use any density that exists in the Android project -->
		<splash density="land-hdpi" src="www/img/assurance-cyclo-scooter-hdpi-land.png"/>
		<splash density="land-ldpi" src="www/img/assurance-cyclo-scooter-ldpi-land.png"/>
		<splash density="land-mdpi" src="www/img/assurance-cyclo-scooter-mdpi-land.png"/>
		<splash density="land-xhdpi" src="www/img/assurance-cyclo-scooter-xhdpi-land.png"/>

		<splash density="port-hdpi" src="www/img/assurance-cyclo-scooter-hdpi-portrait.png"/>
		<splash density="port-ldpi" src="www/img/assurance-cyclo-scooter-ldpi-portrait.png"/>
		<splash density="port-mdpi" src="www/img/assurance-cyclo-scooter-mdpi-portrait"/>
		<splash density="port-xhdpi" src="www/img/assurance-cyclo-scooter-xhdpi-portrait.png"/>
	</platform>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
